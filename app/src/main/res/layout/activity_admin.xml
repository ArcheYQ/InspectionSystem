<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_marginTop="20dp"
                android:id="@+id/tb_administrato"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                >
                <TextView
                    android:textSize="15sp"
                    android:text="设备巡检系统"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>
        </FrameLayout>

        <Button
            android:id="@+id/bt_adm_user"
            android:textColor="#6a7e80"
            android:background="@drawable/check_border_all"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:text="管理用户"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bt_adm_device"
            android:textColor="#6a7e80"
            android:background="@drawable/check_border_all"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="管理设备"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bt_adm_add"
            android:textColor="#6a7e80"
            android:background="@drawable/check_border_all"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="登记设备"
            android:layout_width="160dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/bt_adm_back"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/check_border_all"
            android:text="退出"
            android:textColor="#6a7e80" />
    <TextView
        android:id="@+id/tv_adm_username"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:text="管理员1，欢迎您。"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
